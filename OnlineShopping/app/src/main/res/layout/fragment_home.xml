<!--            app:cardElevation="0dp"-->
<!--            app:strokeColor="@color/g_gray700"-->
<!--            app:strokeWidth="5dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            app:layout_constraintEnd_toStartOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
